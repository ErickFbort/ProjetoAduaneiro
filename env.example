# Configurações de Produção - Projeto Aduaneiro
# Copie este arquivo para .env e configure as variáveis

# Ambiente
FLASK_ENV=production
DEBUG=False

# Segurança
SECRET_KEY=sua-chave-super-secreta-aqui-mude-em-producao
WTF_CSRF_ENABLED=True
WTF_CSRF_SSL_STRICT=True

# Banco de Dados
# Para SQLite (desenvolvimento)
# DATABASE_URL=sqlite:///projeto_aduaneiro.db

# Para PostgreSQL (produção)
DATABASE_URL=postgresql://usuario:senha@localhost:5432/projeto_aduaneiro

# Redis
REDIS_URL=redis://localhost:6379/0
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Cache
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=3600

# Email (opcional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=seu-email@gmail.com
MAIL_PASSWORD=sua-senha-de-app

# HTTPS
HTTPS_ENABLED=True

# Rate Limiting
RATELIMIT_DEFAULT=200 per day, 50 per hour

# Upload
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=static/uploads

# Logs
LOG_LEVEL=INFO
LOG_FILE=logs/application.log